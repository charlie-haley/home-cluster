{
    "enabled": true,
    "timezone": "Europe/London",
    "semanticCommits": "enabled",
    "dependencyDashboard": true,
    "dependencyDashboardTitle": "Renovate Dashboard",
    "commitBody": "Signed-off-by: Charlie Haley <charlie-haley@users.noreply.github.com>",
    "suppressNotifications": [
        "prIgnoreNotification"
    ],
    "extends": [
        "gitmoji"
    ],
    "rebaseWhen": "conflicted",
    "kubernetes": {
        "fileMatch": [
            "manifests/.+\\.yaml$"
        ],
        "ignorePaths": [
            "manifests/flux-system/",
            "manifests/actions-runner-system/"
        ]
    },
    "helm-values": {
        "fileMatch": [
            "manifests/.+helm-release\\.yaml$"
        ]
    },
    "flux": {
        "fileMatch": [
            "manifests/.+\\.ya?ml$"
        ]
    },
    "docker": {
        "fileMatch": [
            "manifests/.+\\.ya?ml$"
        ]
    },
    "ignoreDeps": [
        "kubesphere/kubectl",
        "containous/orbula",
        "ghcr.io/fluxcd/helm-controller",
        "ghcr.io/fluxcd/image-automation-controller",
        "ghcr.io/fluxcd/image-reflector-controller",
        "ghcr.io/fluxcd/kustomize-controller",
        "ghcr.io/fluxcd/notification-controller",
        "ghcr.io/fluxcd/source-controller"
    ],
    "regexManagers": [
        {
            "fileMatch": [
                "manifests/apps/.+\\.ya?ml$"
            ],
            "matchStrings": [
                "helm:\n *repo:(?<registryUrl>.*?)\n *chart: (?<depName>.*?)\n *version: (?<currentValue>.*)\n"
            ],
            "datasourceTemplate": "helm"
        }
    ],
    "packageRules": [
        {
        "matchManagers": ["kubernetes"],
        "matchDatasources": ["kubernetes-api"],
        "description": "disable kubernetes api updates",
        "enabled": false
        },
        {
            "packagePatterns": [
                "rook-ceph-cluster",
                "rook-ceph",
            ],
            "enabled": true,
            "groupName": "rook-ceph"
        },
        {
            "matchDatasources": [
                "helm"
            ],
            "separateMinorPatch": true
        },
        {
            "matchDatasources": [
                "docker"
            ],
            "enabled": true,
            "commitMessageTopic": "container image {{depName}}",
            "commitMessageExtra": "to {{#if isSingleVersion}}v{{{toVersion}}}{{else}}{{{newValue}}}{{/if}}",
            "matchUpdateTypes": [
                "major",
                "minor",
                "patch"
            ]
        },
        {
            "matchDatasources": [
                "docker"
            ],
            "matchUpdateTypes": [
                "major"
            ],
            "labels": [
                "renovate/image-release",
                "dependency/major"
            ]
        },
        {
            "matchDatasources": [
                "docker"
            ],
            "matchUpdateTypes": [
                "minor"
            ],
            "labels": [
                "renovate/image-release",
                "dependency/minor"
            ]
        },
        {
            "matchDatasources": [
                "docker"
            ],
            "matchUpdateTypes": [
                "patch"
            ],
            "labels": [
                "renovate/image-release",
                "dependency/patch"
            ]
        },
        {
            "matchDatasources": [
                "helm"
            ],
            "matchUpdateTypes": [
                "major"
            ],
            "labels": [
                "renovate/helm-release",
                "dependency/major"
            ]
        },
        {
            "matchDatasources": [
                "helm"
            ],
            "matchUpdateTypes": [
                "minor"
            ],
            "labels": [
                "renovate/helm-release",
                "dependency/minor"
            ]
        },
        {
            "matchDatasources": [
                "helm"
            ],
            "matchUpdateTypes": [
                "patch"
            ],
            "labels": [
                "renovate/helm-release",
                "dependency/patch"
            ]
        }
    ]
}
